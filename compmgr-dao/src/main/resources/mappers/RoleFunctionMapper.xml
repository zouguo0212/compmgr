<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.zut.cs.rolepower.dao.RoleFunctionMapper">
    <select id="getRoleidById"  parameterType="java.lang.Integer" resultType="java.lang.String">
        select role_id
        from t_role_function
        where id=#{0}
    </select>

    <select id="getFunctionidById"  parameterType="java.lang.Integer" resultType="java.lang.String">
        select function_id
        from t_role_function
        where id=#{0}
    </select>
</mapper>